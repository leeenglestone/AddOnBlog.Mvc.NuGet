@model AddOnBlog.MvcApplication.Models.PostViewModel
@{
    ViewBag.Title = "Create";
}

@section Scripts {

    <script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
    <script src="~/Scripts/tag-it.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "code"
            ]
        });

        $(function () {
            $('#Post_Categories').tagit();
        });
    </script>
}

<h2>Create Post</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(x => x.Post.Title, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Post.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Post.PostDate, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Post.PostDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Post.Content, new { @class = "col-md-2 control-label" })
        @Html.TextAreaFor(x => x.Post.Content, new { @class = "form-control", style = "min-height:500px" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Post.Categories, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Post.Categories, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-success" value="Create" />
}
