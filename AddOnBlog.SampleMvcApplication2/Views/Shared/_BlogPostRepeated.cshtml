@model AddOnBlog.MvcApplication.Models.PostViewModel
<div class="blog-post">
    <h2 class="blog-post-title">@Html.ActionLink(Model.Post.Title, "Post", new { id=Model.Post.FriendlyUrl}, null)</h2>
    <p class="blog-post-meta">@Model.Post.PostDate.ToString("MMM d, yyyy") by <a href="#">Mark</a></p>
    
    @Html.Raw(@Model.Post.Content)
    
    <p>
        Posted under :
        @foreach (var c in Model.Post.Categories.Split(new[] { "," }, StringSplitOptions.RemoveEmptyEntries))
        {
            @Html.ActionLink(c, "Category", new { id = c }, null)
        }
    </p>
</div>
